<?xml version="1.0" encoding="utf-8"?>
<ProgramClass Name="SteerProgControl">
    <Description>Program for steering the MASS motion</Description>
    <DataItemsCollection>
        <DataListProgram Name="Steer::Ap::SteerApData" NameObject="Data">
            <Item NameClass="SteerApDataAp1" NameObject="DataAp1" />
            <Item NameClass="SteerApDataAp2" NameObject="DataAp2" />
        </DataListProgram>
        <DataListProgram Name="Steer::Cp::SteerCpData" NameObject="DataControl">
            <Item NameClass="SteerCpDataCp1" NameObject="DataControlCp1" />
            <Item NameClass="SteerCpDataCp2" NameObject="DataControlCp2" />
        </DataListProgram>
    </DataItemsCollection>
    <PortsCollection>
        <PortProgram Name="ioSystem::Ports::System::ioPortProgramSystem" NameObject="PortSystem">
            <Item NameClass="ioPortProgramSystem" NameObject="PortSystem" />
        </PortProgram>
    </PortsCollection>
    <InternalFunctions>
        <Function Name="OnRecvCommand">
            <Inputs>
                <Argument Name="typeCommand" TypeNum="Int32" />
                <Argument Name="stationID" TypeNum="Int32" />
            </Inputs>
            <Outputs />
        </Function>
        <Function Name="OnCommandReleaseCp1">
            <Inputs />
            <Outputs />
        </Function>
        <Function Name="OnRequestData">
            <Inputs />
            <Outputs />
        </Function>
    </InternalFunctions>
    <Sequences>
        <Run />
        <RxTxData NameClass="SteerApDataAp1" GlobalID="Steer.Ap1.OnRequestSteerData">
            <Function TypeFunction="Internal">
                <Call Name="OnRequestData" />
            </Function>
        </RxTxData>
        <RxTxData NameClass="SteerCpDataCp1" GlobalID="Steer.Cp1.TakeCommand">
            <Function TypeFunction="Internal">
                <Call Name="OnRecvCommand">
                    <Input Name="typeCommand" />
                    <Input Name="stationID" />
                </Call>
            </Function>
            <RxTxData NameClass="SteerCpDataCp1" GlobalID="Steer.Cp1.OnChangeCommand" />
            <RxTxData NameClass="SteerCpDataCp2" GlobalID="Steer.Cp2.OnChangeCommand" />
        </RxTxData>
        <RxTxData NameClass="SteerCpDataCp1" GlobalID="Steer.Cp1.Release">
            <Function TypeFunction="Internal">
                <Call Name="OnCommandReleaseCp1" />
            </Function>
        </RxTxData>
    </Sequences>
</ProgramClass>